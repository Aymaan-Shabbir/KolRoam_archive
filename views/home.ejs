  <body>
    <div id="nav">
      <img src="/images/KolTour2.png" alt="Logo" />
      <button id="menu-toggle">&#9776;</button>
      <div id="nleft">
        <!-- <img src="KolTour-removebg-preview.png" alt=""> -->
        <a href="/places">PLACES</a>
        <a href="/login">POST</a>
      </div>
      <div id="nright">
        <!-- <button id="menu-toggle">&#9776; Menu</button> -->
        <a href="/gallery">GALLERY</a>
        <a href="/about">ABOUT</a>
      </div>
    </div>
    <div class="main">
      <div class="slideshow">
        <div class="slide">
          <img src="/images/herit4 (2).png" alt="Image 1" />
        </div>
        <div class="slide">
          <img src="/images/park4.png" alt="Image 2" />
